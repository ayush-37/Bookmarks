<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet"/>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #fb6376, #fcb1a6);
        font-family: "Segoe UI", sans-serif;
        margin: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        box-sizing: border-box;
      }

      .signup-wrapper {
        max-width: 1000px;
        margin: auto;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        display: flex;
        flex-direction: row;
        overflow: hidden;
        min-height: 500px;
        animation: fadeIn 0.8s ease-in-out;
      }

      img {
        height: 200px;
        width: 410px;
        border-radius: 30%;
        margin-bottom: 5px;
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .info-section {
        background: white;
        flex: 1;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: all 0.3s;
      }

      .form-section {
        flex: 1;
        background-color: #f9f9f9;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
      }

      .form-section h2 {
        font-weight: 600;
        margin-bottom: 1.5rem;
      }

      .form-control {
        padding-left: 2.5rem;
      }

      .input-icon {
        position: absolute;
        top: 50%;
        left: 10px;
        transform: translateY(-50%);
        color: black;
      }

      .form-group {
        position: relative;
        margin-bottom: 1rem;
      }

      .btn-signup {
        background-color: #4b68ff;
        color: white;
        padding: 12px;
        width: 100%;
        border-radius: 10px;
        transition: background-color 0.3s ease;
      }

      .btn-signup:hover {
        background-color: #3a57d9;
      }

      .alt-signup-btn {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        width: 48%;
        transition: background-color 0.2s;
      }

      .alt-signup-btn:hover {
        background-color: #eaeaea;
      }

      .alt-options {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
      }

      .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 20px 0;
        color: #777;
        font-weight: 400;
      }

      .divider::before,
      .divider::after {
        content: "";
        flex: 1;
        height: 1px;
        background: #ccc;
      }

      .divider::before {
        margin-right: 12px;
      }

      .divider::after {
        margin-left: 12px;
      }

      .vertical-divider {
        width: 1px;
        background-color: #ddd;
        margin: 2rem 0;
      }

      @media (max-width: 768px) {
        .signup-wrapper {
          flex-direction: column-reverse;
        }
        .info-section,
        .form-section {
          padding: 1.5rem;
        }
        .vertical-divider {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <% if (success && success.length > 0) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= success[0] %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    <div class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= error[0] %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% } %>
    <div class="signup-wrapper">
      <!-- Left info -->
      <div class="info-section text-center text-md-start">
        <img src="/images/book_cover.jpg" alt="books" />
        <h2>Reset Your Password</h2>
        <p>
          Choose a new password to access your Book Notes account.
        </p>
      </div>

      <div class="vertical-divider d-none d-md-block"></div>

      <!-- Right form -->
      <div class="form-section">
        <h2 class="text-center mb-4" style="font-weight: bold;">Create New Password</h2>
        <form action="/reset-password/<%= token %>" method="POST">
          <div class="form-group">
            <i class="fa fa-lock input-icon"></i>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="New Password"
              required
            />
          </div>
          <div class="form-group">
            <i class="fa fa-lock input-icon"></i>
            <input
              type="password"
              class="form-control"
              name="confirmPassword"
              placeholder="Confirm New Password"
              required
            />
          </div>
          <button type="submit" class="btn btn-signup btn-primary">Reset Password</button>
          <p class="text-center mt-3 text-muted">
            <a href="/login">Back to Sign In</a>
          </p>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  document.addEventListener('DOMContentLoaded', () => {
    const toastElList = document.querySelectorAll('.toast');
    toastElList.forEach(toastEl => {
      const toast = new bootstrap.Toast(toastEl, { delay: 5000 });
      toast.show();
    });
  });
</script>
  </body>
</html>
